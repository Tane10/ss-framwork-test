{
    "compilerOptions": {
        /* Basic Options */
        "target": "es2020",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
        "example.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}